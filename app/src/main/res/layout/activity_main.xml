<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.i053114.taller.MainActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/border_item_user"
        >

        <ImageView
            android:id="@+id/img_item_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagen11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/ic_launcher_round"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/id_tv_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id:"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/id_tv_userinput_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jonathan Mideros"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_tv_user_id"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/id_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/id_tv_userinput_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jonmid"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_tv_name"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/id_tv_user_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User name:"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/id_tv_userinput_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jamideros@hotmail.com"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_tv_user_username"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/id_tv_user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/id_tv_userinput_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3103012972"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_tv_user_address"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/id_tv_user_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company:"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/id_tv_userinput_namecompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I.U CESMAG"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/id_tv_user_company"/>
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                android:layout_toRightOf="@id/id_tv_userlabel_address"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_status"
                />

            <TextView
                android:id="@+id/id_tv_item_cv_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 megusta"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="15dp"

                />


        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
